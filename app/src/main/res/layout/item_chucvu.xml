<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@color/blue2"
        android:id="@+id/layout_update_itemchucvu">

        <TextView
            android:id="@+id/tv_machucvu_itemchucvu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã loại chức vụ 1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_tenchucvu_itemchucvu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_machucvu_itemchucvu"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:text="Tên loại chức vụ: admin"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </RelativeLayout>


</androidx.cardview.widget.CardView>